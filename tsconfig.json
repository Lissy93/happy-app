{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["es2015", "es7", "es2015.iterable", "dom"],
        "noImplicitAny": false
    },
    "exclude": [
      "node_modules",
      "typings"
    ],
    "filesGlob": [
      "**/*.ts",
      "typings/main",
      "typings/index.d.ts"
    ]
}
